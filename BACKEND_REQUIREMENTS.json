  "6_DATA_MODELS": {
    "user": {
      "fields": {
        "id": {
          "type": "string (UUID or ObjectId)",
          "description": "Unique user identifier",
          "required": true
        },
        "email": {
          "type": "string",
          "description": "User email address (unique)",
          "required": true,
          "validation": "Valid email format"
        },
        "password": {
          "type": "string (hashed)",
          "description": "Encrypted password",
          "required": true
        },
        "name": {
          "type": "string",
          "description": "Full name of user",
          "required": true,
          "maxLength": 100
        },
        "avatar": {
          "type": "string (URL)",
          "description": "Profile picture URL",
          "required": false
        },
        "phone": {
          "type": "string",
          "description": "Contact phone number",
          "required": false,
          "maxLength": 20
        },
        "location": {
          "type": "string",
          "description": "City, State/Country",
          "required": false,
          "maxLength": 100
        },
        "bio": {
          "type": "string",
          "description": "User biography/about section",
          "required": false,
          "maxLength": 500
        },
        "joinDate": {
          "type": "datetime",
          "description": "When user joined platform",
          "required": true,
          "default": "current timestamp"
        },
        "role": {
          "type": "enum: 'student' | 'instructor' | 'admin'",
          "description": "User role/permissions",
          "required": true,
          "default": "student"
        },
        "isVerified": {
          "type": "boolean",
          "description": "Email verification status",
          "required": true,
          "default": false
        },
        "preferences": {
          "type": "object",
          "description": "User notification preferences",
          "required": false,
          "fields": {
            "emailNotifications": "boolean (default: true)",
            "marketingEmails": "boolean (default: false)",
            "courseRecommendations": "boolean (default: true)"
          }
        },
        "createdAt": {
          "type": "datetime",
          "description": "Account creation timestamp",
          "required": true,
          "default": "current timestamp"
        },
        "updatedAt": {
          "type": "datetime",
          "description": "Last profile update",
          "required": true,
          "default": "current timestamp"
        }
      }
    },

    "course": {
      "fields": {
        "id": {
          "type": "string (UUID or ObjectId)",
          "description": "Unique course identifier",
          "required": true
        },
        "title": {
          "type": "string",
          "description": "Course name",
          "required": true,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "description": "Detailed course description",
          "required": true,
          "maxLength": 5000
        },
        "thumbnail": {
          "type": "string (URL)",
          "description": "Course preview image",
          "required": false
        },
        "price": {
          "type": "decimal/float",
          "description": "Course price in USD",
          "required": true,
          "min": 0
        },
        "category": {
          "type": "string (enum)",
          "description": "Course category",
          "required": true,
          "enum": [
            "Web Development",
            "Data Science",
            "AI/ML",
            "Design",
            "Business",
            "Music",
            "Photography",
            "Language Learning"
          ]
        },
        "difficulty": {
          "type": "string (enum)",
          "description": "Difficulty level",
          "required": true,
          "enum": ["Beginner", "Intermediate", "Advanced"]
        },
        "instructorId": {
          "type": "string (foreign key)",
          "description": "Reference to User (instructor)",
          "required": true
        },
        "rating": {
          "type": "decimal",
          "description": "Average course rating (0-5)",
          "required": true,
          "default": 0
        },
        "studentsEnrolled": {
          "type": "number",
          "description": "Number of enrolled students",
          "required": true,
          "default": 0
        },
        "duration": {
          "type": "string",
          "description": "Course duration (e.g., '12 weeks')",
          "required": true
        },
        "highlights": {
          "type": "array of strings",
          "description": "Key course highlights (6 items)",
          "required": false
        },
        "requirements": {
          "type": "array of strings",
          "description": "Prerequisites/requirements",
          "required": false
        },
        "whatYouLearn": {
          "type": "array of strings",
          "description": "Learning outcomes (5 items)",
          "required": false
        },
        "features": {
          "type": "array of strings",
          "description": "Course benefits",
          "required": false,
          "default": [
            "Lifetime access",
            "Certificate of completion",
            "Money-back guarantee"
          ]
        },
        "status": {
          "type": "enum: 'draft' | 'published' | 'archived'",
          "description": "Course publication status",
          "required": true,
          "default": "draft"
        },
        "createdAt": {
          "type": "datetime",
          "description": "Course creation date",
          "required": true,
          "default": "current timestamp"
        },
        "updatedAt": {
          "type": "datetime",
          "description": "Last course update",
          "required": true,
          "default": "current timestamp"
        }
      }
    },

    "module": {
      "fields": {
        "id": {
          "type": "string (UUID or ObjectId)",
          "description": "Unique module identifier",
          "required": true
        },
        "courseId": {
          "type": "string (foreign key)",
          "description": "Reference to Course",
          "required": true
        },
        "title": {
          "type": "string",
          "description": "Module/lesson title",
          "required": true,
          "maxLength": 200
        },
        "type": {
          "type": "enum: 'video' | 'document'",
          "description": "Content type",
          "required": true
        },
        "url": {
          "type": "string (URL)",
          "description": "URL to video or document file",
          "required": true
        },
        "fileName": {
          "type": "string",
          "description": "Original file name",
          "required": true
        },
        "duration": {
          "type": "string",
          "description": "Duration (for videos: '45 min', for documents: page count)",
          "required": false
        },
        "order": {
          "type": "number",
          "description": "Sequence in course",
          "required": true
        },
        "createdAt": {
          "type": "datetime",
          "description": "Module creation date",
          "required": true,
          "default": "current timestamp"
        }
      }
    },

    "enrollment": {
      "fields": {
        "id": {
          "type": "string (UUID or ObjectId)",
          "description": "Unique enrollment identifier",
          "required": true
        },
        "userId": {
          "type": "string (foreign key)",
          "description": "Reference to User",
          "required": true
        },
        "courseId": {
          "type": "string (foreign key)",
          "description": "Reference to Course",
          "required": true
        },
        "progress": {
          "type": "number (0-100)",
          "description": "Course completion percentage",
          "required": true,
          "default": 0
        },
        "lastAccessed": {
          "type": "datetime",
          "description": "Last time user accessed course",
          "required": false
        },
        "enrolledAt": {
          "type": "datetime",
          "description": "Enrollment date",
          "required": true,
          "default": "current timestamp"
        },
        "completedAt": {
          "type": "datetime",
          "description": "Course completion date (null if not completed)",
          "required": false
        },
        "certificateUrl": {
          "type": "string (URL)",
          "description": "Certificate of completion URL",
          "required": false
        },
        "status": {
          "type": "enum: 'active' | 'completed' | 'paused'",
          "description": "Enrollment status",
          "required": true,
          "default": "active"
        }
      },
      "unique_constraint": "Composite key (userId, courseId) - prevent duplicate enrollments"
    },

    "wishlist": {
      "fields": {
        "id": {
          "type": "string (UUID or ObjectId)",
          "description": "Unique wishlist entry identifier",
          "required": true
        },
        "userId": {
          "type": "string (foreign key)",
          "description": "Reference to User",
          "required": true
        },
        "courseId": {
          "type": "string (foreign key)",
          "description": "Reference to Course",
          "required": true
        },
        "addedAt": {
          "type": "datetime",
          "description": "Date added to wishlist",
          "required": true,
          "default": "current timestamp"
        }
      },
      "unique_constraint": "Composite key (userId, courseId) - one wishlist entry per user per course"
    },

    "lesson": {
      "fields": {
        "id": {
          "type": "string (UUID or ObjectId)",
          "description": "Unique lesson identifier",
          "required": true
        },
        "courseId": {
          "type": "string (foreign key)",
          "description": "Reference to Course",
          "required": true
        },
        "title": {
          "type": "string",
          "description": "Lesson title",
          "required": true,
          "maxLength": 200
        },
        "duration": {
          "type": "string",
          "description": "Lesson duration (e.g., '45 min')",
          "required": true
        },
        "order": {
          "type": "number",
          "description": "Sequence in course curriculum",
          "required": true
        },
        "content": {
          "type": "string",
          "description": "Lesson content/description",
          "required": false
        },
        "moduleId": {
          "type": "string (foreign key, optional)",
          "description": "Reference to Module if lesson has associated content",
          "required": false
        }
      }
    },

    "review_rating": {
      "fields": {
        "id": {
          "type": "string (UUID or ObjectId)",
          "description": "Unique review identifier",
          "required": true
        },
        "userId": {
          "type": "string (foreign key)",
          "description": "Reference to User (reviewer)",
          "required": true
        },
        "courseId": {
          "type": "string (foreign key)",
          "description": "Reference to Course",
          "required": true
        },
        "rating": {
          "type": "number (1-5)",
          "description": "Star rating",
          "required": true
        },
        "review": {
          "type": "string",
          "description": "Review text",
          "required": false,
          "maxLength": 1000
        },
        "createdAt": {
          "type": "datetime",
          "description": "Review creation date",
          "required": true,
          "default": "current timestamp"
        }
      },
      "unique_constraint": "Composite key (userId, courseId) - one review per user per course"
    }
  }
}
