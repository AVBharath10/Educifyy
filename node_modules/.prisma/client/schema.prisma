// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  password   String?
  name       String
  avatar     String?
  phone      String?
  location   String?
  bio        String?
  joinDate   DateTime @default(now())
  role       Role     @default(STUDENT)
  isVerified Boolean  @default(false)

  // Relations
  enrollments    Enrollment[]
  wishlist       Wishlist[]
  coursesCreated Course[]     @relation("instructor")
  reviews        Review[]

  // Preferences
  emailNotifications    Boolean @default(true)
  marketingEmails       Boolean @default(false)
  courseRecommendations Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}

model Course {
  id           String         @id @default(cuid())
  title        String
  description  String         @db.Text
  thumbnail    String?
  price        Decimal        @default(0)
  category     CourseCategory
  difficulty   Difficulty
  instructorId String
  instructor   User           @relation("instructor", fields: [instructorId], references: [id], onDelete: Cascade)

  rating           Decimal @default(0)
  studentsEnrolled Int     @default(0)
  duration         String

  highlights   String[] @default([])
  requirements String[] @default([])
  whatYouLearn String[] @default([])
  features     String[] @default(["Lifetime access", "Certificate of completion", "Money-back guarantee"])

  status CourseStatus @default(DRAFT)

  // Relations
  modules     Module[]
  lessons     Lesson[]
  enrollments Enrollment[]
  wishlist    Wishlist[]
  reviews     Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // ‚ùå Removed: @@fulltext([title, description])

  @@index([instructorId])
  @@index([category])
  @@index([difficulty])
}

enum CourseCategory {
  WEB_DEVELOPMENT
  DATA_SCIENCE
  AI_ML
  DESIGN
  BUSINESS
  MUSIC
  PHOTOGRAPHY
  LANGUAGE_LEARNING
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum CourseStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Module {
  id       String @id @default(cuid())
  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  title    String
  type     ModuleType
  url      String
  fileName String
  duration String?
  order    Int

  createdAt DateTime @default(now())

  @@unique([courseId, order])
  @@index([courseId])
}

enum ModuleType {
  VIDEO
  DOCUMENT
}

model Lesson {
  id       String @id @default(cuid())
  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  title    String
  duration String
  order    Int
  content  String? @db.Text
  moduleId String?

  createdAt DateTime @default(now())

  @@unique([courseId, order])
  @@index([courseId])
}

model Enrollment {
  id       String @id @default(cuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  progress       Int              @default(0)
  lastAccessed   DateTime?
  enrolledAt     DateTime         @default(now())
  completedAt    DateTime?
  certificateUrl String?
  status         EnrollmentStatus @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

enum EnrollmentStatus {
  ACTIVE
  COMPLETED
  PAUSED
}

model Wishlist {
  id       String @id @default(cuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  addedAt DateTime @default(now())

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model Review {
  id       String @id @default(cuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  rating Int
  review String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}
